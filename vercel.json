{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/calculate", "dest": "/api/calculate-chmod.js" },
    { "src": "/api/calculate-subnet", "dest": "/api/calculate-subnet.js" },
    { "src": "/apps/(.*)", "dest": "/public/apps/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
